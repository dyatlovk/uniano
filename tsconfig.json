{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "types": [
      "vite-plugin-svgr/client",
      "vitest/importMeta"
    ],
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@assets/images/*": [
        "assets/images/*"
      ],
      "@assets/svg/*": [
        "assets/svg/*"
      ],
      "@common/components/*": [
        "common/components/*.tsx"
      ],
      "@common/helpers/*": [
        "common/helpers/*.ts"
      ],
      "@common/models/*": [
        "common/models/*.ts"
      ],
      "@common/styles/*": [
        "common/styles/*.ts"
      ],
      "@common/content/*": [
        "common/content/*.ts"
      ],
      "@common/context/*": [
        "common/context/*.tsx"
      ],
      "@common/domain/*": [
        "common/domain/*.ts"
      ],
      "@pages/*": [
        "pages/*.tsx"
      ]
    }
  },
  "include": [
    "./src",
    "test/**/*.ts",
    "test/**/*.tsx",
  ],
}
